{
  "name": "Python Codespace",
  "dockerFile": "Dockerfile",
  "context": ".",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
        // Add other extensions if needed
      ]
    }
  },
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Application",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y git && pip install Flask uvicorn && uvicorn main:app --host 0.0.0.0 --port 5000"
}
