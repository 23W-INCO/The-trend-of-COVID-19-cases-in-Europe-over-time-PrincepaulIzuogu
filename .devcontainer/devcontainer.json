{
  "name": "FastAPI-Project",
  "dockerFile": "Dockerfile",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": ["ms-python.python", "jnoortheen.nix-ide"],
  "forwardPorts": [5000],
  "postCreateCommand": "nix-shell --run 'pip install -r requirements.txt && uvicorn main:app --host 0.0.0.0 --port 5000'"
}
